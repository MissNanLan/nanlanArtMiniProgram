/* photography-detail.wxss */

.photography-detail {
}

.photography-detail_title {
  padding: 0 20rpx;
}

.photography-detail_content {
  display: grid;
  grid-template-columns: 50% 50%;
  grid-column-gap: 1rpx;
  grid-row-gap: 1rpx;
}

.photography-detail_content {
  margin: 0 -14rpx;
}

.photography-detail_content image {
  width: 100%;
  height: 200rpx;
}

.photography-detail_subTitle {
  height: 80rpx;
  line-height: 80rpx;
  margin: 20rpx -20rpx 0 -20rpx;
  border-top: 0.5rpx solid #d9d9d9;
  padding-left: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.avatar {
  width: 30px;
  height: 30px;
  vertical-align: middle;
  border-radius: 15px;
  background-color: #ccc;
}

.username {
  height: 30px;
  vertical-align: middle;
  padding-left: 20rpx;
}
