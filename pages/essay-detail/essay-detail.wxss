/* essay-detail.wxss */

.essay-detail {
  display: grid;
  height: 100%;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}

.essay-detail_title {
  font-size: 40rpx;
  font-weight: bold;
}

.essay-detail_user {
  padding: 20rpx 0;
}

.essay-detail_user .avatar {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  background-color: #ccc;
  border-radius: 30px;
}

.essay-detail_user .username {
  padding-left: 20rpx;
  vertical-align: middle;
}

.essay-detail_numbers {
  font-size: 24rpx;
  color: #999;
}

.essay-detail_detail {
  font-size: 32rpx;
  line-height: 48rpx;
}
