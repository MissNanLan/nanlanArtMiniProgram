/* my.wxss */

.personal {
  background-color: #f0f0f0;
}

.personal--header {
  background-color: #fff;
  padding: 1rem;
}

.avatar {
  width: 50px;
  height: 50px;
  vertical-align: middle;
  border-radius: 25px;
  background-color: #ccc;
}

.username {
  height: 30px;
  vertical-align: middle;
  padding-left: 6px;
}

.personal--content {
  background-color: #fff;
  margin-top: 0.5rem;
}

.personal--content_items {
  padding: 0.8rem 1rem;
  border-bottom: 1px solid #d9d9d9;
}
