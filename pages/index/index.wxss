/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.index--slider {
  height: 6rem;
}

.index--hotPhotography_title, .index--hotArticle_title {
  border-left: 4px solid #5ddcdc;
  margin: 1rem 0;
  margin-left: 0.5rem;
  padding-left: 0.5rem;
  font-size: 14px;
}

.index--hotPhotography_content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-column-gap: 2rpx;
}

.index--hotPhotography_content .hostPhotographImage {
  position: relative;
  width: 100%;
  height: 200px;
  background-color: #ccc;
}
.index--hotPhotography_content .label{
   position: absolute;
   color: #fff;
}

.index--hotArticle_content .hotArticleContext {
  display: grid;
  grid-template-columns: 0.2fr 1.8fr;
  padding: 12px;
  border-top: 1px solid #d9d9d9;
}

.index--hotArticle_content .hotArticleContext .leftImg image {
  margin: 6px;
  width: 4rem;
  height: 4rem;
  background-color: #ccc;
}

.index--hotArticle_content .rightContent .essayDetail {
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3; /*这个数字是设置要显示省略号的行数*/
  -webkit-box-orient: vertical;
  line-height: 1rem;
  color: #999;
  font-size: 12px;
}

.index--hotArticle_content .rightContent .bottomText {
  color: #999;
  font-size: 10px;
  margin-top: 0.5rem;
}

.index--hotArticle_content .rightContent .bottomText .icon {
  display: inline-block;
  margin-right: 0.5rem;
  padding-right: 0.5rem;
}
